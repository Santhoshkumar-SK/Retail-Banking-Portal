@model IEnumerable<RetailBankingPortal.Models.Statement>

@{
    ViewData["Title"] = "Statement";
    Layout = "~/Views/Customer/_CustomerLayout.cshtml";
    StatementSearch search = new StatementSearch();

}

<link rel="stylesheet" href="~/css/MainStyle.css" />
@if (Model == null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>No Statement found</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
else
{
    <br />
    <h1>Statement</h1>
    <hr />
    <form asp-action="statement">
        <div asp-validation-summary="ModelOnly"></div>
        <input hidden asp-for="@search.AccountId" value="@Model.First().accountID" />
        @*<div class="form-group">

            
        </div>

        <div class="form-group">

            
        </div>

        <div class="form-group">
            
        </div>*@

        <div class="row">
            <div class="col-md-4">
                <input type="date" asp-for="@search.FromDate" class="form-control" placeholder="Enter From Date" />

                <span asp-validation-for="@search.FromDate" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <input asp-for="@search.ToDate" class="form-control" type="date" placeholder="Enter To Date" />

                <span asp-validation-for="@search.ToDate" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <button class="btn btn-primary">
                    Search
                </button>
            </div>
        </div>
    </form>

    <hr />
    <div class="card transactionbg">
        <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.statementID)</th>
                    <th>@Html.DisplayNameFor(model => model.accountID)</th>
                    <th>@Html.DisplayNameFor(model => model.withdrawalOrDeposit)</th>
                    <th>transferedAmount</th>
                    <th>@Html.DisplayNameFor(model => model.date)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.statementID)</td>
                        <td>@Html.DisplayFor(modelItem => item.accountID)</td>
                        <td>@Html.DisplayFor(modelItem => item.withdrawalOrDeposit)</td>
                        <td>@Html.DisplayFor(modelItem => item.closingBalance)</td>
                        <td>@String.Format("{0:d/M/yyyy}", item.date)</td>
                    </tr>
                }
            </tbody>
        </table>
            </div>
    </div>
}


