@model RetailBankingPortal.Models.Transaction
@{
    ViewData["Title"] = "Transaction";
    Layout = "~/Views/Customer/_CustomerLayout.cshtml";
}

<link rel="stylesheet" href="~/css/CreateCustomerStyle.css" />

@if (@ViewBag.SuccessfullCreation != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Customer Account Created Successfully </strong> @ViewBag.SuccessfullCreation
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<br />


<div class="limiter" style="background-color: transparent">

    <div class="container-create">
        <div class="wrap-create">
            <div class="create-form-title">
                <span class="create-form-title-1">
                    Transfer Here
                </span>
            </div>
            <div>
                <form id="createForm" asp-action="transaction" class="create-form">

                    <div asp-validation-summary="ModelOnly"></div>
                 

                    <div class="form-group">
                 
                        <input asp-for="sourceAccountId" value="@ViewData["accid"]" class="form-control" hidden />
                       
                    </div>

                    <div class="form-group">
                        <label asp-for="destinationAccountId" class="control-label">Receiver AccountId:</label>
                        <input asp-for="destinationAccountId" class="form-control"  placeholder="Enter destinationAccountId" />

                        <span asp-validation-for="destinationAccountId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="amount" class="control-label">Amount:</label>
                        <input asp-for="amount" type="number" class="form-control" placeholder="Enter amount" />
                       
                        <span asp-validation-for="amount" class="text-danger"></span>
                    </div>
                   

                    <button type="submit">
                        Transfer
                    </button>
                </form>
            </div>


        </div>
    </div>
</div>

